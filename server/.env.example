# Database
MONGODB_URI=mongodb://localhost:27017/getthis-money

# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Session & Authentication
SESSION_SECRET=your-super-secure-session-secret-here
JWT_SECRET=your-super-secure-jwt-secret-here
JWT_REFRESH_SECRET=your-super-secure-jwt-refresh-secret-here

# OAuth Credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# Email Configuration (for password reset, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORG_ID=your-openai-org-id-here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_PREMIUM_PRICE_ID=price_your_premium_price_id_here
STRIPE_ENTERPRISE_PRICE_ID=price_your_enterprise_price_id_here

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Admin Configuration
ADMIN_EMAIL=admin@getthis.money

# Logging Configuration
LOG_LEVEL=info

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Feature Flags
ENABLE_AI_GENERATION=true
ENABLE_PREMIUM_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_EXPORT_PDF=true
ENABLE_TEAM_COLLABORATION=false

# Development/Testing
ENABLE_DEBUG_LOGS=false
MOCK_STRIPE_PAYMENTS=false
MOCK_AI_RESPONSES=false
